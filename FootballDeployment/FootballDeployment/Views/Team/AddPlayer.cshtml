@{
    ViewBag.Title = "Add Player";
    Layout = "_Layout";
}

<div class="form">
    <form method="post">
        <label for="Name">Name</label>
        <input maxlength="20" name="Name" required/>

        <label for="Age" >Age</label>
        <input maxlength="20" name="Age" size="3" required/>

        <label for="Number">Number</label>
        <input maxlength="20" name="Number" size="3" required/>

        <label for="Team">Team</label>
        <input maxlength="20" name="Team" value="@ViewBag.Team" />

        <select name="Position" width="10">
            <option value="" disabled="disabled" selected="selected">Select a player position</option>
            <option value="Forward">Forward</option>
            <option value="Striker">Striker</option>
            <option value="Goal Keeper">Goal Keeper</option>
            <option value="Defensive">Defensive</option>
        </select>

        <button type="submit">Create Player</button>
    </form>
</div>