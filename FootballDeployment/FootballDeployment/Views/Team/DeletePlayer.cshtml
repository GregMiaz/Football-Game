@model FootballDeployment.Models.Player

@{
    Layout = "_Layout";
}

<div class="jumbotron">
    <h2 class="display-3">Player Details</h2>
</div>

<div class="progress">
    <div class="progress-bar" role="progressbar" style="width: 33%" aria-valuenow="33" aria-valuemin="0" aria-valuemax="100"></div>
    <div class="progress-bar bg-success" role="progressbar" style="width: 33%" aria-valuenow="33" aria-valuemin="0" aria-valuemax="100"></div>
    <div class="progress-bar bg-info" role="progressbar" style="width: 34%" aria-valuenow="34" aria-valuemin="0" aria-valuemax="100"></div>
</div>

<div>
    <dl class="form">
        <dt>
            Name
        </dt>
        <dd>
            @Model.Name
        </dd>
        <dt>
            Age
        </dt>
        <dd>
            @Model.Age
        </dd>
        <dt>
            Number
        </dt>
        <dd>
            @Model.Number
        </dd>
        <dt>
            Team
        </dt>
        <dd>
            @Model.Team
        </dd>
    </dl>
</div>

<div id="btns-delete-player">
    <div>
        <form method="post">
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="Team" />
            <input type="submit" class="btn btn-primary btn-lg btn-add-remove-player" value="Delete Player" />
        </form>
    </div>

    <button type="button" class="btn btn-primary btn-lg btn-add-remove-player">
        <a asp-action="TeamInfo" asp-route-teamName="@Model.Team">Back to Team</a>
    </button>
</div>