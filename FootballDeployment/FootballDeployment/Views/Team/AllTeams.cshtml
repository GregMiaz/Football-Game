@model List<FootballDeployment.Models.Team>

@{
    ViewBag.Title = "All Teams";
    Layout = "_Layout";
}

@if (Model.Count == 0)
{
    <p>No Teams found.</p>
    <p><a asp-action="Index" asp-controller="Home">Go back and Create a new Team!</a></p>
}
else
{
    <div class="jumbotron">
        <h1 class="display-3">All Teams</h1>
        <p class="lead">Join a team by clicking on its name!</p>
    </div>

    <div class="progress">
        <div class="progress-bar" role="progressbar" style="width: 33%" aria-valuenow="33" aria-valuemin="0" aria-valuemax="100"></div>
        <div class="progress-bar bg-success" role="progressbar" style="width: 33%" aria-valuenow="33" aria-valuemin="0" aria-valuemax="100"></div>
        <div class="progress-bar bg-info" role="progressbar" style="width: 34%" aria-valuenow="34" aria-valuemin="0" aria-valuemax="100"></div>
    </div>

    <table class="table table-hover">
        <thead>
            <tr class="col">
                <th>Team</th>
                <th>Country</th>
                <th>Field</th>
            </tr>
        </thead>

        <tbody id="table-body">
             @{
                int num = 0;
                foreach (var team in Model)
                {
                    string color = (num++%2 == 0) ? "table-light" : "table-success";
                    <tr class="@color">
                        <td><a asp-action="TeamInfo" asp-route-teamName="@team.Name">@team.Name</a></td>
                        <td>@team.Country</td>
                        <td>@team.Field</td>
                    </tr>
                }
              }
        </tbody>
    </table>
}