@model FootballDeployment.Models.Player

@{
    ViewBag.Title = "Update Player";
    Layout = "_Layout";
}


<div class="jumbotron">
    <h2 class="display-3">Update Player</h2>
</div>

<div class="progress">
    <div class="progress-bar" role="progressbar" style="width: 33%" aria-valuenow="33" aria-valuemin="0" aria-valuemax="100"></div>
    <div class="progress-bar bg-success" role="progressbar" style="width: 33%" aria-valuenow="33" aria-valuemin="0" aria-valuemax="100"></div>
    <div class="progress-bar bg-info" role="progressbar" style="width: 34%" aria-valuenow="34" aria-valuemin="0" aria-valuemax="100"></div>
</div>

<div class="form">
    <form method="post">
        <label for="Name">Name</label>
        <input maxlength="20" name="Name" value="@Model.Name" />

        <label for="Age">Age</label>
        <input type="number" min="1" max="70" maxlength="2" name="Age" value="@Model.Age" />

        <label for="Number">Number</label>
        <input type="number" min="1" max="30" maxlength="2" name="Number" value="@Model.Number" />

        <label for="Team">Team</label>
        <input maxlength="20" name="Team" value="@Model.Team" />

        <select name="Position" width="10" required>
            <option value="" disabled="disabled" selected="selected">Select a player position</option>
            <option value="Forward">Forward</option>
            <option value="Striker">Striker</option>
            <option value="Goal Keeper">Goal Keeper</option>
            <option value="Defensive">Defensive</option>
        </select>

        <button type="submit">Save</button>
    </form>
</div>